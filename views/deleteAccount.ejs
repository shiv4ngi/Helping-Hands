<body class="main-bg">
  <div class="container login-container" style="
    padding-top: 0px;
">
      <form class="my-form" action="/deleteAccount" method="post">
              <div class="row">
                  <div class="col-md-6 login-form-1">
                      <h3>Patient</h3>

                          <div class="form-group">
                              <input name="username" type="email" id="email" class="form-control" placeholder="Your Email *" />
                          </div>
                          <div class="form-group">
                            <label class="radio-inline" style="color: white">
                              <input name="user" type="radio" id="patient" value="patients" >  Delete my Patient Account.
                            </label>
                          </div>
                          <p class="text-whitesmoke"><small>Are you logged in?</small>
                            <a class="text-darkyellow" href="/patientLogin"><small>Log In first</small></a>
                          </p>
                          <br>
                          <div class="form-group">
                              <input type="submit" class="btnSubmit" value="Delete Account" />
                          </div>



                  </div>
                  <div class="col-md-6 login-form-2">


                      <h3>Caretaker</h3>
                          <div class="form-group">
                              <input name="username" type="email" id="email" class="form-control" placeholder="Your Email *"  />
                          </div>
                          <div class="form-group">
                              <input type="password" name="password" class="form-control" placeholder="Your Password *" />
                          </div>
                          <div class="form-group">
                            <label class="radio-inline" style="color: white">
                              <input name="user" type="radio" id="caretaker" value="caretakers">  Delete my Caretaker Account.
                            </label>
                          </div>
                          
                          <div class="form-group">
                              <input type="submit" class="btnSubmit" value="Delete Account" />
                          </div>
                  </div>
              </div>
              </form>
          </div>

</body>
